{
    "manifest_version"  : 2,
    "name"              : "lkdx",
    "version"           : "0.0.1",

    "icons"             : {
        "16"                : "./icon16.png",
        "48"                : "./icon48.png",
        "128"               : "./icon128.png"
    },

    "permissions"       : [
        "storage",
        "tabs",
        "http://*/*"
    ],

    "content_scripts"   : [{
        "matches"           : [ "https://www.linkedin.com/*"],
        "js"                : [ "./content_script.js" ]
    }],

    "background"        : {
        "scripts"           : [ "background.js" ],
        "persistent"        : false
    },

    "browser_action"    : {
        "default_icon"      : {
            "16"                : "./icon16.png",
            "48"                : "./icon48.png",
            "128"               : "./icon128.png"
        },
        "default_title"     : "lkdx",
        "default_popup"     : "./index.html"
    }
}
